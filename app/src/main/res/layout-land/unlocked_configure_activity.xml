<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:paddingBottom="20dp"
            android:src="@drawable/yellow_banner" />

        <ImageView
            android:id="@+id/icon_attendance"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/school_attendance_icon" />

        <TextView
            android:id="@+id/firstText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_attendance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="REAXIUM"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/secondText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstText"
            android:layout_centerHorizontal="true"
            android:text="SCHOOL"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="23sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondText"
            android:layout_centerHorizontal="true"
            android:text="ATTENDANCE"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_centerInParent="true"
            android:id="@+id/container"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_below="@id/logo"
            android:clickable="true"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:src="@drawable/fingerprint" />


            </RelativeLayout>

            <TextView
                android:id="@+id/fingerRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="86dp"
                android:layout_marginStart="86dp"
                android:gravity="center_horizontal"
                android:text="FINGER READ"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/finger_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fingerRead"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="ON"
                android:textColor="@color/green"
                android:textSize="28sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_two"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_below="@id/separator"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:src="@drawable/rfid_signal" />


            </RelativeLayout>

            <TextView
                android:id="@+id/rfid_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="86dp"
                android:layout_marginStart="86dp"
                android:gravity="center_horizontal"
                android:text="FINGER READ"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/rfid_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rfid_read"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="ON"
                android:textColor="@color/green"
                android:textSize="32sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_border">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/separator_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_two"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_border">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/unlocked" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>