<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/brand_header"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/circle_big_mask"
            android:id="@+id/header_bg"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-120dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-50dp"
            android:layout_height="240dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_centerInParent="true"
            android:padding="14dp">

            <ImageView
                app:srcCompat="@drawable/logo_icon"
                android:id="@+id/brand_logo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="70" />

            <ImageView
                app:srcCompat="@drawable/brand_name"
                android:layout_below="@+id/brand_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:id="@+id/brand_name"
                android:layout_width="100dp"
                android:layout_weight="30"
                android:layout_height="0dp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/brand_header">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="@drawable/gray_container"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <ImageView
                app:srcCompat="@drawable/unlocked"
                android:id="@+id/lockHomeIcon"
                android:alpha=".25"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_above="@+id/lockHomeIcon"
                android:layout_marginBottom="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_width="match_parent">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">

                            <ImageView
                                android:src="@drawable/ic_fingerprint"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <ImageView
                                app:srcCompat="@drawable/times_ic"
                                android:id="@+id/fingerprintOff"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:visibility="invisible"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_weight="70">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LECTURA DE HUELLA"
                                android:textSize="12sp"
                                android:textColor="@color/textColor"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="ENCENDIDO"
                                android:textColor="@color/green"
                                android:textStyle="normal|bold"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/dividerColor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">

                            <ImageView
                                android:src="@drawable/rfid_signal"
                                android:layout_gravity="center"
                                android:alpha="0.8"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <ImageView
                                app:srcCompat="@drawable/times_ic"
                                android:id="@+id/rfidOff"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LECTURA DE TARJETA"
                                android:textSize="12sp"
                                android:textColor="@color/textColor"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="APAGADO"
                                android:textSize="16sp"
                                android:textColor="@color/red"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/dividerColor"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="66"
            android:background="@drawable/gray_container"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/home_student_in_container">

                <TextView
                    android:text="REGISTRO DE ENTRADAS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/home_student_in_header" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white98"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/home_student_out_container">

                <TextView
                    android:text="REGISTRO DE SALIDAS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/home_student_out_header" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white98"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>