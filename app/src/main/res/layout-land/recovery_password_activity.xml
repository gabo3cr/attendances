<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/principal_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:paddingBottom="20dp"
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/new_yellow_banner" />

        <ImageView
            android:id="@+id/icon_attendance"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/school_attendance_icon" />

        <TextView
            android:id="@+id/firstText"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_attendance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="REAXIUM"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/secondText"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstText"
            android:layout_centerHorizontal="true"
            android:text="SCHOOL"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondText"
            android:layout_centerHorizontal="true"
            android:text="ATTENDANCE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/recovery_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:padding="10sp">

            <!-- Email Label -->
            <TextView
                android:id="@+id/recovery_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Recovery Password"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recovery_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="User Name"
                android:textAlignment="center"
                android:textColor="@color/colorLabel"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_label"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="text"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="20sp"
                android:text="Hcarrillo@t4ss.com"
                android:textSize="25sp" />

            <Button
                android:textAlignment="center"
                android:id="@+id/button_login"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_below="@id/box_input"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200sp"
                android:background="@drawable/login_material_primary_button"
                android:elevation="5dp"
                android:paddingBottom="12sp"
                android:paddingTop="12sp"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>